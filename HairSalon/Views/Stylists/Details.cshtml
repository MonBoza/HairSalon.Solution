@{
  Layout = "_Layout"
}
@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>@Model.Name Details: </h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>


@if (@Model.Client.Count == 0)
{
  <h3>No Stylists have been added for this client.</h3>
}
else
{
  <h3>Clients: </h3>
    <div>
    
      @foreach (Client client in Model.Clients)
      {
        <div>
            <li>@Html.ActionLink($"{client.ClientName}", "Details", "Clients", new { id = client.ClientId })</li>
        </div>
      }
    </div>
}
<p>@Html.ActionLink("Edit Stylist", "Edit", new{ id = Model.StylistId})</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new{ id = Model.StylistId})</p>


<p>@Html.ActionLink("Show all Stylists", "Index")</p>