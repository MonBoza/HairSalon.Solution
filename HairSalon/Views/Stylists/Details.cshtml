@{
  Layout = "_Layout";
}
@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>@Model.Name Details: </h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>
<h3>Specialties: @Model.Specialties</h3>

@if (@Model.Clients.Count == 0)
{
  <h3>No clients have been added for @Model.Name.</h3>
}
else
{
  <p>Select the client for details</p>
  <h3>Clients: </h3>
    <div>
    
      @foreach (Client client in Model.Clients)
      {
        <div>
            <li>@Html.ActionLink($"{client.ClientName}", "Details", "Clients", new { id = client.ClientId })</li>
         <br />
        </div>
      }
    </div>
}
<hr />
<button>@Html.ActionLink("Add a new client", "Create", "Clients", new { id = Model.StylistId })</button>
<button>@Html.ActionLink("Edit Stylist", "Edit", new{ id = Model.StylistId})</button>
<button>@Html.ActionLink("Delete Stylist", "Delete", new{ id = Model.StylistId})</button>
<br />
<br />
<button>@Html.ActionLink("Show all Stylists", "Index")</button>