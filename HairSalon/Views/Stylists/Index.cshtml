@{
  Layout = "_Layout";
}


@using HairSalon.Models;

<h1>Stylists</h1>
<h2>Select a stylist to see details.</h2>

@if (Model.Count == 0)
{
  <p>There are no stylists yet.</p>
}

 
    @foreach (Stylist stylist in Model)
    {
        <h3>@Html.ActionLink($"{stylist.Name}", "Details", new {id = stylist.StylistId})</h3>
    }
 
<button>@Html.ActionLink("Add a new stylist", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>