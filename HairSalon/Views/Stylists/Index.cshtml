@{
  Layout = "_Layout";
}


@using HairSalon.Models;

<h1>Stylists</h1>

@if (Model.Count() == 0)
{
  <p>There are no stylists yet.</p>
}

 
    @foreach (Stylist stylist in Model)
    {
   
       <div>
        <h3>@Html.ActionLink($"{stylist.Name}", "Details", new {id = stylist.StylistId})</h3>
       </div>
    }
 
<p>@Html.ActionLink("Add a new stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Items")</p>