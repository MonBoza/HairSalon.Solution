@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client
@using HairSalon.Models;

<h4>Add a new Client</h4>

<p>You need to have at least one stylist before you can add a client!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Stylists") to add a Stylist.</p>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.ClientName)
    @Html.TextBoxFor(model => model.ClientName, new { @class = "form-control", @required = "required" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.Notes)
    @Html.TextBoxFor(model => model.Notes, new { @class = "form-control", @required = "required" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId", null, "Select a Stylist", new { @class = "form-control" })
  </div>

  <input type="submit" value="Add new client" class="btn btn-primary" />
}

<p>@Html.ActionLink("Show all clients", "Index")</p>