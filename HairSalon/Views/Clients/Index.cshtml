@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h2>Clients</h2>
<p>Click a client to see their details</p>
<br />
<br />

@if (@Model.Count == 0)
{
  <p> Please add a client!</p>
}

@foreach (Client client in Model)
{
  <div>
    <div>
      <h4>@Html.ActionLink($"{client.ClientName}","Details", new {id = client.ClientId})</h4>
    </div>
  </div>
}

<div class="mt-4">
  <button>@Html.ActionLink("Add client", "Create")</button>
  <br />
  <br />
  <button>@Html.ActionLink("Return Home", "Index", "Home")</button>
</div>
