@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h2>Clients</h2>
<br />
<br />

@if (@Model.Count == 0)
{
  <p> Please add a client!</p>
}

@foreach (Client client in Model)
{
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">@Html.ActionLink($"{client.ClientName}","Details", new {id = client.ClientId})</h4>
    </div>
  </div>
}

<div>@Html.ActionLink("Add client", "Create", null, new { @class = "btn btn-primary" })</div>
<div>@Html.ActionLink("Return Home", "Index", "Home", null, new { @class = "btn btn-secondary" })</div>
