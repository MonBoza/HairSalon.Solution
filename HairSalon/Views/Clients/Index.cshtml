@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h2>Clients</h2>
<br />
<br />

@if (@Model.Count == 0)
{
  <p> Please add a client!</p>
}

@foreach (Client client in Model)
{
  <div>
    <h4>@Html.ActionLink($"{client.ClientName}","Details", new {id = client.ClientId})</h4>
  </div>
}

<div>@Html.ActionLink("Add client", "Create")</div>
<div>@Html.ActionLink("Return Home", "Index", "Home")</div>